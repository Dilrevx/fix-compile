# OpenAI API Configuration
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=your-api-key-here

# Model Configuration
EXECUTOR_MODEL=gpt-4o-mini
FIXER_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=INFO

# Limits (seconds)
MAX_TOKENS=32768
TIMEOUT=300

